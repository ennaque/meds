<nav class="text-center">
    <ul class="pagination pagination-sm">
        {% if page > 1 %}
            <li class="pagination-link">
                <a href="{{ link }}&page={{ page - 1 }}">Назад</a>
            </li>
        {% endif %}
        {% for pag in pagination %}
            {% if pag == '...' %}
                <li class="pagination-link">
                    <a>{{ pag }}</a>
                </li>
            {% else %}
                <li class="pagination-link{% if page == pag %} active{% endif %}">
                    <a href="{{ link }}&page={{ pag }}">{{ pag }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if page < pagination | last %}
            <li class="pagination-link">
                <a href="{{ link }}&page={{ page + 1 }}">Вперед</a>
            </li>
        {% endif %}
    </ul>
</nav>
